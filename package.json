{
	"name": "newspack-ads",
	"version": "2.0.1",
	"author": "Automattic",
	"private": true,
	"scripts": {
		"cm": "newspack-scripts commit",
		"semantic-release": "newspack-scripts release --files=newspack-ads.php",
		"build": "newspack-scripts build",
		"watch": "newspack-scripts watch",
		"start": "npm ci && npm run watch",
		"clean": "rm -rf dist/",
		"test": "echo \"Error: no test specified\" && exit 0",
		"lint": "npm run lint:scss && npm run lint:js",
		"lint:js": "newspack-scripts eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"lint:js:staged": "newspack-scripts eslint --ext .js,.jsx,.ts,.tsx",
		"fix:js": "newspack-scripts eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
		"lint:scss": "newspack-scripts stylelint '**/*.scss' --customSyntax postcss-scss --config=./node_modules/newspack-scripts/config/stylelint.config.js",
		"lint:scss:staged": "newspack-scripts stylelint --customSyntax postcss-scss --config=./node_modules/newspack-scripts/config/stylelint.config.js",
		"format:scss": "npx prettier --write '**/*.scss'",
		"lint:php": "./vendor/bin/phpcs .",
		"lint:php:staged": "./vendor/bin/phpcs --filter=GitStaged",
		"format:php": "./vendor/bin/phpcbf .",
		"release:archive": "rm -rf release && mkdir -p release && rsync -r . ./release/newspack-ads --exclude-from='./.distignore' && cd release && zip -r newspack-ads.zip newspack-ads",
		"release": "npm run build && npm run semantic-release"
	},
	"lint-staged": {
		"*.js": "npm run lint:js:staged",
		"*.scss": "npm run lint:scss:staged",
		"*.php": "npm run lint:php:staged"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/newspack-ads.git"
	},
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/Automattic/newspack-ads/issues"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.10.3",
		"@wordpress/browserslist-config": "^6.0.0",
		"classnames": "^2.5.1",
		"eslint": "^8.57.0",
		"lint-staged": "^15.2.5",
		"newspack-scripts": "file:~/Repositories/newspack-scripts",
		"postcss-scss": "^4.0.9"
	},
	"dependencies": {
		"newspack-components": "^2.2.1",
		"prebid.js": "^8.51.0"
	}
}